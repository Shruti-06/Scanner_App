<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Table_nos"
    android:background="#FFD858"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:id="@+id/animation_view"
                    app:lottie_rawRes="@raw/welcome"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_marginTop="30dp"/>

        </LinearLayout>

        <TextView
        android:id="@+id/cafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="casual"
        android:text="to Cafe Delight"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="40dp" />

        <TextView
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="select the table no."
            android:layout_marginStart="10dp"
            android:textColor="#474645"
            android:textSize="20dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <Button
                            android:id="@+id/table_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Table no. 1"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:background="#FDA403"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:id="@+id/table_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Table no. 2"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:background="#FDA403"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"/>

                        <Button
                            android:id="@+id/table_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Table no. 3"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:background="#FDA403"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"/>

                        <Button
                            android:id="@+id/table_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Table no. 4"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:background="#FDA403"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"/>

                        <Button
                            android:id="@+id/table_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Table no. 5"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:background="#FDA403"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"/>


                </LinearLayout>

        </ScrollView>

</LinearLayout>